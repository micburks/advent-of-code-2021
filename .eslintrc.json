{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error", {
        "singleQuote": true,
        "bracketSpacing": false
      }
    ],
    "arrow-body-style": "off",
    "prefer-arrow-callback": "off"
  },
  "env": {
    "node": true
  }
}
